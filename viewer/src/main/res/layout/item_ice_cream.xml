<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/list_hint_name"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_text_20"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toLeftOf="@+id/gl_bias"
        app:layout_constraintTop_toBottomOf="@+id/gl_top" />

    <TextView
        android:id="@+id/tv_item_flavor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/list_hint_flavor"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_text_18"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_color"
        app:layout_constraintLeft_toLeftOf="@+id/gl_start"
        app:layout_constraintRight_toLeftOf="@+id/gl_bias"
        app:layout_constraintTop_toTopOf="@+id/tv_item_color" />

    <TextView
        android:id="@+id/tv_item_temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="@string/list_hint_temperature"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_text_36"
        app:layout_constraintLeft_toRightOf="@+id/gl_bias"
        app:layout_constraintRight_toLeftOf="@+id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/gl_top" />

    <TextView
        android:id="@+id/tv_item_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:hint="@string/list_hint_color"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_text_18"
        app:layout_constraintBottom_toBottomOf="@+id/gl_bottom"
        app:layout_constraintLeft_toRightOf="@+id/gl_bias"
        app:layout_constraintRight_toLeftOf="@+id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_temperature" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_bias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/size_96" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/size_16" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/size_16" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/size_16" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/size_16" />

</android.support.constraint.ConstraintLayout>
